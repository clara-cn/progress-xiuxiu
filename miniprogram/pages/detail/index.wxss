
.form-cell-detail {
  padding: 20px 15px;
  border-radius: 8px;
  background-color: #E8F2FF;
  margin-bottom: 10px;
}

.form-cell-detail:not(:last-child) {
  border-bottom: rgba(0, 0, 0, 0.05) solid 1px;
}

.form-cell-detail.inline {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.form-cell_title {
  margin-bottom: 5px;
  font-size: medium;
}

.form-cell_desc {
  font-size: small;
  color: rgb(126, 126, 126);
  margin: 0;
}

.sub-todo-btn {
  font-size: small;
}

.sub-todo-btn:active {
  background-color: #CFD9E8;
}

.footer {
  width: 100%;
  height: 10vh;
  position: fixed;
  bottom: 0;
  display: flex;
  border-top: lightgray solid 1px;
}

.footer view {
  width: 100%;
  height: 100%;
  padding-top: 2vh;
  text-align: center;
}

.list {
  background: white;
}

.edit {
  color: white;
  background: #353535;
}


.todo-list {
  margin-top: 10px;
}

.todo-item {
  display: flex;
  justify-content: space-between;
  padding: 5px 0;
}

.todo-checkbox {
  margin-right: 10px;
}

.completed {
  text-decoration: line-through;
  color: #888;
}