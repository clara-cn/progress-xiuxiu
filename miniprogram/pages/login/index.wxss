.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  padding-top: 10%;
  background: #E8F2FF;
}


.background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1; /* Push background behind other elements */
}

.logo_icon {
  width: 50px;
  height: 50px;
  margin-bottom: 10px;
}

.checkbox_container {
  margin-top: 20px;
  color: gray;
  font-size: 13px;
}

.checkbox_container span {
  color: #90B9DC;
}

.get-userinfo-btn {
  margin-top: 5%;
  padding: 10px 10px;
  min-width: 70%;
  background-color: #497ca7;
  color: white;
  border-radius: 5px;
  font-size: 16px;
  font-weight: 400;
}
