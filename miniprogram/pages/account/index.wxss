.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: center; */
  height: 100vh;
}

.user_container {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* flex-direction: row; */
  align-items: center;
  justify-content: flex-start;
  padding: 0;
  margin: 0;
  width: 95%;
  margin-left: 10px;
  /* background-color: turquoise; */
}

.avatar-wrapper {
  padding: 0;
  margin: 0;
  height: 60px;
  max-width: 60px;
  background-color: white;
}

.avatar-wrapper:active {
  background-color: gray;
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin: 0;
}

.nickname {
  font-size: 20px;
  font-weight: bold;
  margin: 0;
  padding: 0;
  flex-shrink: 0;
  margin-top: 10px;
}

.edit-icon {
  width: 10px;
  height: 10px;
}

.get-userinfo-btn {
  padding: 10px 20px;
  background-color: #3cc51f;
  color: white;
  border-radius: 5px;
}

.numbe_conclusion {
  display: flex;
  flex-direction: row;
  background-color: antiquewhite;
  border-radius: 20px;
  width: 70%;
  height: 10rem;
}