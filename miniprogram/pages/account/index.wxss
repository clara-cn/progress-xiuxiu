.container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  height: 100vh;
  background: #E8F2FF;

}

.user_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 10px;
  padding: 10px;
}

.avatar-wrapper {
  padding: 0;
  margin: 0;
  height: 60px;
  max-width: 60px;
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin: 0;
}

.avatar:active {
  filter: brightness(50%)
}

.nickname {
  font-size: 20px;
  font-weight: bold;
  margin: 0;
  padding: 0;
  flex-shrink: 0;
  margin-top: 10px;
}

.edit-icon {
  width: 15px;
  height: 15px;
}


.user_achieve {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
  margin-bottom: 10px;
}

.achieve_container {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.achieve_title {
  color: #002E33
}

.achieve_num {
  color: rgb(59, 59, 59)
}

.user_fonctions {
  background-color: white;
  border-top-right-radius: 20px;
  border-top-left-radius: 20px;
  margin-left: 3px;
  margin-right: 3px;
  padding: 5px;
  height: 100%;
  width: 100%;

  display: flex;
  flex-direction: column;
  gap: 10px; /* Add space between buttons */
  padding: 10px;
}

.full_width_btn {
  min-width: 100%;
  font-size: 16px;
  box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.1);
  padding: 8px;
  margin: 0;
  text-align: left;
  border-radius: 0;
  font-weight: 300;
}

.get-userinfo-btn {
  padding: 10px 20px;
  background-color: #3cc51f;
  color: white;
  border-radius: 5px;
}

.numbe_conclusion {
  display: flex;
  flex-direction: row;
  background-color: antiquewhite;
  border-radius: 20px;
  width: 70%;
  height: 10rem;
}

